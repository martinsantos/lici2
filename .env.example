# Configuraciones de base de datos
DB_HOST=database
DB_PORT=5432
DB_NAME=licitometro
DB_USER=licitometro_admin
DB_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Configuraciones de la aplicación
NODE_ENV=development
HOST=0.0.0.0
LOG_LEVEL=info

# Configuraciones de Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Configuraciones de Machine Learning
ML_MODEL_PATH=/app/models
PREDICTION_HORIZON=30
ML_SERVICE_URL=http://ml-service:5000

# Configuraciones de monitoreo
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Configuraciones de seguridad
JWT_SECRET=your_jwt_secret_key
CORS_ORIGIN=http://localhost:3000

# Configuraciones de logging
LOKI_URL=http://logs:3100

# Configuraciones específicas de Licitometro
LICITOMETRO_API_KEY=your_licitometro_api_key
SCRAPING_INTERVAL_DAYS=7

# Configuraciones de despliegue
DEPLOY_ENV=local
VERSION=1.0.0
APP_PORT=3000
