---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Licitometro 2.0 - Sistema de seguimiento de licitaciones">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-gray-50">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-white shadow-md">
        <nav class="p-4">
          <div class="mb-8">
            <h1 class="text-2xl font-bold text-gray-800">Licitometro 2.0</h1>
          </div>
          <ul class="space-y-2">
            <li>
              <a href="/" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                <span class="ml-3">Dashboard</span>
              </a>
            </li>
            <li>
              <a href="/licitaciones" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                <span class="ml-3">Licitaciones</span>
              </a>
            </li>
            <li>
              <a href="/notificaciones" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                <span class="ml-3">Notificaciones</span>
              </a>
            </li>
            <li>
              <a href="/configuracion" class="flex items-center p-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                <span class="ml-3">Configuraci√≥n</span>
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 p-8">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
