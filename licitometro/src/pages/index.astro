---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.jsx';
---

<Layout title="Licitometro 2.0">
  <Header client:load />
  <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
        Bienvenido a Licitometro 2.0
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        Sistema inteligente de monitoreo y análisis de licitaciones públicas
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/licitaciones"
          class="rounded-md bg-primary-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600"
        >
          Ver Licitaciones
        </a>
        <a href="/documentos" class="text-sm font-semibold leading-6 text-gray-900">
          Explorar Documentos <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    --primary-500: #3b82f6;
    --primary-600: #2563eb;
  }
</style>
